- model_class = Note
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @note.name
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @note.content


= link_to t('.back', :default => t("helpers.links.back")), notes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_note_path(@note), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), note_path(@note), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
