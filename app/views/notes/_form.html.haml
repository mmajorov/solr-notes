= form_for @note, html: { class: "form form-horizontal note" } do |f|
  .form-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@note[:name])
  .form-group
    =f.label :category_id, class: 'control-label'
    .controls
      =f.collection_select :category_id, Category.all, :id, :title, {}, {class: 'form-control'}
  .form-group
    = f.label :content, class: 'control-label'
    .controls
      = f.text_field :content, class: 'form-control', required: true
    = error_span(@note[:content])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), notes_path, :class => 'btn btn-default'
